        MaxHealth = S_MaxHealth;
        RegCooldown = S_RegCooldown;
        Reger = S_Reger;
        CurrentHealth = S_CurrentHealth;
        PlayerAlive = S_PlayerAlive;

        MaxHunger = S_MaxHunger;
        CurrentHunger = S_CurrentHunger;
        HasHunger = S_HasHunger;

        MaxThirst = S_MaxThirst;
        CurrentThirst = S_CurrentThirst;
        HasThirst = S_HasThirst;

        X = S_X;
        X_Rotation = S_X_Rotation;
        Y = S_Y;
        Y_Rotation = S_Y_Rotation;
        Z = S_Z;
        Z_Rotation = S_Z_Rotation;
        W_Rotation = S_W_Rotation;
    }
}
